    ViewBag.Title = "Заметки";
}

<dev class="row">
    <ul class="notes">
        <li id="add-note" style="cursor:pointer">
            <div class="yellow-bg">
                <p><i class="fa fa-plus-square fa-5x"  style="display:block;transform:translate(34%, 80%)"></i></p>
            </div>
        </li>
        <li>
            <div class="yellow-bg">
                <small>12:03:28 12-04-2014</small>
                <h4>Awesome title</h4>
                <p>The years, sometimes by accident, sometimes on purpose (injected humour and the like).</p>
                <a href="#" class="text-danger pull-right"><i class="fa fa-trash-o "></i></a>
            </div>
        </li>
        <li>
            <div class="yellow-bg">
                <small>12:03:28 12-04-2014</small>
                <h4>Awesome date</h4>
                <p>The years, sometimes by accident, sometimes on purpose (injected humour and the like).</p>
                <a href="#" class="text-danger pull-right"><i class="fa fa-trash-o "></i></a>
            </div>
        </li>
        <li>
            <div class="yellow-bg">
                <small>12:03:28 12-04-2014</small>
                <h4>Awesome project</h4>
                <p>The years, sometimes by accident, sometimes on purpose (injected humour and the like).</p>
                <a href="#" class="text-danger pull-right"><i class="fa fa-trash-o "></i></a>
            </div>
        </li>
    </ul>
</dev>
@section Scripts{
    <script>
        $("#add-note").on('click', function () {
            $(this).after("<li> \
            <div class=\"yellow-bg\" style=\"opacity:0\"> \
                <small></small> \
                <h4>Awesome project</h4> \
                <p contenteditable=\"true\" style=\"height:60%\"></p> \
                <a href=\"#\" class=\"text-danger pull-right\"><i class=\"fa fa-trash-o \"></i></a> \
            </div> \
        </li>")
            $("div.yellow-bg:eq(1)").animate({ opacity: 1.0 }, 500, function () { $("div.yellow-bg:eq(1)").children("p").focus() })
        })
    </script>
}